generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model users {
    id        Int    @id @default(autoincrement())
    name      String
    email     String @unique
    password  String
    createdAt String

    saved saved[]
}

model saved {
    id              Int    @id @default(autoincrement())
    user            users  @relation(fields: [userId], references: [id])
    userId          Int
    song_identifier String
}

model musics {
    id         Int    @id @default(autoincrement())
    identifier String @unique
    visits     Int
}

model bands {
    id     Int    @id @default(autoincrement())
    name   String @unique
    visits Int
}